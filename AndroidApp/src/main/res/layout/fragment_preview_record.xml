<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Camera Preview Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cameraPreviewCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Live Camera Preview"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:layout_marginBottom="12dp" />

                <!-- Main Camera Preview -->
                <FrameLayout
                    android:id="@+id/cameraPreviewContainer"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginBottom="12dp"
                    android:background="@color/md_theme_light_surfaceVariant">

                    <androidx.camera.view.PreviewView
                        android:id="@+id/cameraPreview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <!-- Camera placeholder when not available -->
                    <LinearLayout
                        android:id="@+id/cameraPlaceholder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_videocam"
                            android:layout_marginBottom="8dp"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Camera preview will appear here"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                </FrameLayout>

                <!-- Thermal Camera Preview -->
                <FrameLayout
                    android:id="@+id/thermalPreviewContainer"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/md_theme_light_surfaceVariant">

                    <ImageView
                        android:id="@+id/thermalPreview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <!-- Thermal placeholder -->
                    <LinearLayout
                        android:id="@+id/thermalPlaceholder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_thermostat"
                            android:layout_marginBottom="8dp"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thermal preview"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                </FrameLayout>

                <!-- Camera Controls -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/switchCameraButton"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Switch Camera"
                        app:icon="@drawable/ic_flip_camera_android" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/toggleThermalButton"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Toggle Thermal"
                        app:icon="@drawable/ic_thermostat" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- System Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/statusCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="System Status"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:layout_marginBottom="12dp" />

                <!-- Status Indicators Grid -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="1"
                    android:rowCount="5">

                    <!-- PC Connection -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <View
                            android:id="@+id/pcConnectionIndicator"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/status_indicator_circle" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/pcConnectionStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="PC: Disconnected"
                            android:textAppearance="?attr/textAppearanceBodyMedium" />

                    </LinearLayout>

                    <!-- Shimmer Connection -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <View
                            android:id="@+id/shimmerConnectionIndicator"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/status_indicator_circle" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/shimmerConnectionStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Shimmer: Disconnected"
                            android:textAppearance="?attr/textAppearanceBodyMedium" />

                    </LinearLayout>

                    <!-- Thermal Connection -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <View
                            android:id="@+id/thermalConnectionIndicator"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/status_indicator_circle" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/thermalConnectionStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Thermal: Disconnected"
                            android:textAppearance="?attr/textAppearanceBodyMedium" />

                    </LinearLayout>

                    <!-- GSR Connection -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <View
                            android:id="@+id/gsrConnectionIndicator"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/status_indicator_circle" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/gsrConnectionStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="GSR: Disconnected"
                            android:textAppearance="?attr/textAppearanceBodyMedium" />

                    </LinearLayout>

                    <!-- Network Connection -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:id="@+id/networkConnectionIndicator"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/status_indicator_circle" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/networkConnectionStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Network: Disconnected"
                            android:textAppearance="?attr/textAppearanceBodyMedium" />

                    </LinearLayout>

                </GridLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Recording Control Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/recordingCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recording Control"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:layout_marginBottom="12dp" />

                <!-- Recording Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <View
                        android:id="@+id/recordingStatusIndicator"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/status_indicator_circle" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/recordingStatusText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ready to record"
                        android:textAppearance="?attr/textAppearanceBodyLarge" />

                </LinearLayout>

                <!-- Recording Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/startRecordingButton"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Start Recording"
                        android:textSize="16sp"
                        app:icon="@drawable/ic_record"
                        app:iconSize="24dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/stopRecordingButton"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Stop Recording"
                        android:textSize="16sp"
                        app:icon="@drawable/ic_stop"
                        app:iconSize="24dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>