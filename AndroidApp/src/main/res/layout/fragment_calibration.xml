<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Camera Calibration"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calibrate cameras for accurate recording."
        android:textSize="16sp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/runCalibrationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Run Calibration"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/calibrationStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ready for calibration"
        android:textSize="14sp"
        android:padding="12dp"
        android:background="@color/status_background"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Calibration instructions and progress will appear here..."
        android:gravity="center"
        android:textSize="14sp"
        android:background="@color/preview_placeholder" />

</LinearLayout>