<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Device Status Overview Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/deviceStatusCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Device Status"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:layout_marginBottom="16dp" />

                <!-- PC Connection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <View
                        android:id="@+id/pcConnectionIndicator"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/status_indicator_circle" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/pcConnectionStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="PC Connection: Disconnected"
                        android:textAppearance="?attr/textAppearanceBodyLarge" />

                </LinearLayout>

                <!-- Shimmer Connection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <View
                        android:id="@+id/shimmerConnectionIndicator"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/status_indicator_circle" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/shimmerConnectionStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Shimmer Device: Disconnected"
                        android:textAppearance="?attr/textAppearanceBodyLarge" />

                </LinearLayout>

                <!-- Thermal Connection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <View
                        android:id="@+id/thermalConnectionIndicator"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/status_indicator_circle" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/thermalConnectionStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Thermal Camera: Disconnected"
                        android:textAppearance="?attr/textAppearanceBodyLarge" />

                </LinearLayout>

                <!-- GSR Connection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <View
                        android:id="@+id/gsrConnectionIndicator"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/status_indicator_circle" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/gsrConnectionStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="GSR Sensor: Disconnected"
                        android:textAppearance="?attr/textAppearanceBodyLarge" />

                </LinearLayout>

                <!-- Network Connection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:id="@+id/networkConnectionIndicator"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/status_indicator_circle" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/networkConnectionStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Network: Disconnected"
                        android:textAppearance="?attr/textAppearanceBodyLarge" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- PC Connection Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/pcConnectionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PC Connection"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/connectPcButton"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Connect PC"
                        app:icon="@drawable/ic_computer" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/disconnectPcButton"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Disconnect"
                        app:icon="@drawable/ic_close" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Shimmer Device Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/shimmerDeviceCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shimmer Device"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/shimmerDeviceInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No Shimmer device connected"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/scanShimmerButton"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Scan"
                        app:icon="@drawable/ic_search" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/configureShimmerButton"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Configure"
                        app:icon="@drawable/ic_settings" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/connectShimmerButton"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Connect"
                        app:icon="@drawable/ic_bluetooth_connected" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/disconnectShimmerButton"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Disconnect"
                        app:icon="@drawable/ic_bluetooth_disabled" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Thermal Camera Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/thermalCameraCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thermal Camera"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/thermalDeviceInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No thermal camera connected"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/connectThermalButton"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Connect"
                        app:icon="@drawable/ic_thermostat" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/disconnectThermalButton"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Disconnect"
                        app:icon="@drawable/ic_close" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Network Configuration Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/networkConfigCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Network Configuration"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/networkDeviceInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No network connection"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/configureNetworkButton"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Network Settings"
                    app:icon="@drawable/ic_settings" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Actions Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/quickActionsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quick Actions"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/refreshDevicesButton"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Refresh All Devices"
                    android:textSize="16sp"
                    app:icon="@drawable/ic_refresh"
                    app:iconSize="24dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>