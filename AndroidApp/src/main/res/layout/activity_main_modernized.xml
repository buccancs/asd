<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Multi-Sensor Recording"
        android:textAppearance="@style/AppText.Headline2"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Status Display Section -->
    <LinearLayout
        android:id="@+id/statusDisplaySection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:padding="12dp"
        android:background="@color/colorSurfaceDark"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- PC Connection Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <View
                android:id="@+id/pcConnectionIndicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@color/statusIndicatorDisconnected"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/pcConnectionStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PC: Waiting for PC..."
                android:textColor="@color/textColorPrimaryInverse"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Battery Level Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔋"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/batteryLevelText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Battery: ---%"
                android:textColor="@color/textColorPrimaryInverse"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Sensor Connectivity Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Shimmer Status -->
            <View
                android:id="@+id/shimmerConnectionIndicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@color/statusIndicatorDisconnected"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/shimmerConnectionStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Shimmer: Disconnected"
                android:textColor="@color/textColorPrimaryInverse"
                android:textSize="14sp"
                android:layout_marginEnd="16dp" />

            <!-- Thermal Camera Status -->
            <View
                android:id="@+id/thermalConnectionIndicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@color/statusIndicatorDisconnected"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/thermalConnectionStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thermal: Disconnected"
                android:textColor="@color/textColorPrimaryInverse"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Manual Recording Controls Section -->
    <LinearLayout
        android:id="@+id/manualControlsSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/statusDisplaySection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/manualStartButton"
            style="@style/AppButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="📹 Start Recording"
            android:backgroundTint="@color/buttonPrimary"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/manualStopButton"
            style="@style/AppButton.Danger"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="⏹ Stop Recording"
            android:layout_marginStart="8dp"
            android:enabled="false" />

    </LinearLayout>

    <View
        android:id="@+id/recordingIndicator"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@color/recordingInactive"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/manualControlsSection"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/recordingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recording Status"
        android:textAppearance="@style/AppText.Body2"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/recordingIndicator"
        app:layout_constraintBottom_toBottomOf="@id/recordingIndicator"
        app:layout_constraintStart_toEndOf="@id/recordingIndicator" />

    <View
        android:id="@+id/streamingIndicator"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@color/recordingInactive"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="@id/recordingIndicator"
        app:layout_constraintBottom_toBottomOf="@id/recordingIndicator"
        app:layout_constraintStart_toEndOf="@id/recordingLabel" />

    <TextView
        android:id="@+id/streamingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="📶 Live"
        android:textAppearance="@style/AppText.Body2"
        android:layout_marginStart="12dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/streamingIndicator"
        app:layout_constraintBottom_toBottomOf="@id/streamingIndicator"
        app:layout_constraintStart_toEndOf="@id/streamingIndicator" />

    <LinearLayout
        android:id="@+id/previewContainer"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/streamingIndicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextureView
            android:id="@+id/texturePreview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/thermalPreviewImage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/containerBackground"
            android:scaleType="centerCrop"
            android:layout_marginStart="8dp"
            android:contentDescription="Thermal Camera Preview" />

    </LinearLayout>

    <TextView
        android:id="@+id/streamingDebugOverlay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Streaming: 2fps (50KB/frame)"
        android:textAppearance="@style/AppText.Caption"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:background="@color/colorSurfaceDark"
        android:textColor="@color/statusIndicatorConnected"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/previewContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/shimmerStatusText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Shimmer GSR: Disconnected"
        android:textAppearance="@style/AppText.Body1"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:background="@color/containerBackground"
        android:textColor="@color/statusIndicatorDisconnected"
        app:layout_constraintTop_toBottomOf="@id/streamingDebugOverlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/controlButtonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/shimmerStatusText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/startRecordingButton"
            style="@style/AppButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start Recording"
            android:backgroundTint="@color/buttonPrimary"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/stopRecordingButton"
            style="@style/AppButton.Danger"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stop Recording"
            android:layout_marginStart="8dp"
            android:enabled="false" />

    </LinearLayout>

    <Button
        android:id="@+id/calibrationButton"
        style="@style/AppButton.Secondary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Run Calibration"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/controlButtonsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/requestPermissionsButton"
        style="@style/AppButton.Warning"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Request Permissions"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/calibrationButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Initializing..."
        android:textAppearance="@style/AppText.Body1"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:background="@color/colorSurfaceDark"
        android:textColor="@color/textColorPrimaryInverse"
        app:layout_constraintTop_toBottomOf="@id/requestPermissionsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>